<!DOCTYPE html>
html(class="no-js" lang="en")
  head
    title WikiView
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="description" content="")
    link(rel="stylesheet" href="css/main.css")
    link(rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-theme.min.css")
    link(rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css")

  body
    .body-container
      .search-container
        form.search-form
          .input-container
            input.form-input(id="#search-input" type="text")
            select.select-lang
              option(value='en') EN
              option(value='es') ES
              option(value='pt') PT
          button.submit-btn(type='submit')
            span(class="glyphicon glyphicon-search")
      .random-btn-container
        .random-btn-wrapper
          button.random-btn(type="button") Wikipedia Random Article
            span(class="glyphicon glyphicon-random")
      .result-container

  script(src="/lib/jquery/dist/jquery.min.js")
  script(src="/lib/bootstrap/dist/js/bootstrap.min.js")
  script(src="js/main.js")
